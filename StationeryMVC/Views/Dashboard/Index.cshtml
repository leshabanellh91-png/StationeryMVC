@model StationeryMVC.Models.ViewModels.DashboardViewModel
@using System.Globalization

<h2 class="mb-4">📊 Stationery Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card shadow-sm p-3 mb-3 text-center">
            <h5>Total Items</h5>
            <h3>@Model.TotalItems</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3 mb-3 text-center">
            <h5>Total Quantity</h5>
            <h3>@Model.TotalQuantity</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3 mb-3 text-center">
            <h5>Total Categories</h5>
            <h3>@Model.TotalCategories</h3>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3 mb-3 text-center">
            <h5>Total Stock Value</h5>
            <h3>@Model.TotalValue.ToString("C", new CultureInfo("en-ZA"))</h3>
        </div>
    </div>
</div>

@if (Model.LowStockItems != null && Model.LowStockItems.Any())
{
    <h3 class="mt-4">⚠️ Low Stock Items</h3>
    <div class="row">
        @foreach (var item in Model.LowStockItems)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-danger">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name ?? "N/A"</h5>
                        <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p>
                        <p class="card-text text-danger"><strong>⚠️ Low Stock</strong></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
