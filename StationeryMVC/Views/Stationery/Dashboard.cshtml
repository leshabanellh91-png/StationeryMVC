<h2 class="mb-3">📊 Dashboard</h2>


<div class="row g-3">
    <div class="col-md-4">
        <div class="card text-white bg-primary p-3 shadow-sm">
            <h5>Total Items</h5>
            <h3>@ViewBag.TotalItems</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success p-3 shadow-sm">
            <h5>Total Stock</h5>
            <h3>@ViewBag.TotalStock</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning p-3 shadow-sm">
            <h5>Categories</h5>
            <h3>@ViewBag.CategoryCount</h3>
        </div>
    </div>
</div>
