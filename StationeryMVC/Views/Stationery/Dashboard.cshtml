<h2>📊 Dashboard</h2>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3 p-3">
            <h5>Total Items</h5>
            <h3>@ViewBag.TotalItems</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3 p-3">
            <h5>Total Stock</h5>
            <h3>@ViewBag.TotalStock</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3 p-3">
            <h5>Categories</h5>
            <h3>@ViewBag.CategoryCount</h3>
        </div>
    </div>
</div>
