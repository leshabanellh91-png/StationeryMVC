@model IEnumerable<StationeryMVC.Models.StationeryItem>

<h2 class="mb-4">🛒 Stationery Items</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No stationery items found. <a asp-action="Create">Add your first item</a>.
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"><strong>Category:</strong> @item.Category</p>
                        <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p>
                        @using System.Globalization

                <p>
                    <strong>Price:</strong>
                    @item.Price.ToString("C", new CultureInfo("en-ZA"))
                </p>

                        <a asp-action="Create" class="btn btn-sm btn-primary w-100">Add Another</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
