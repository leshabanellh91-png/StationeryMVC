@model IEnumerable<StationeryMVC.Models.StationeryItem>
@using System.Globalization

<h2 class="mb-4">🛒 Stationery Items</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No stationery items found. <a asp-action="Create">Add your first item</a>.
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : "/images/default.png")"
                         class="card-img-top"
                         alt="@item.Name ?? " Item Image""
                         style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name ?? "N/A"</h5>
                        <p class="card-text"><strong>Category:</strong> @item.Category ?? "N/A"</p>
                        <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p>
                        <p class="card-text">
                            <strong>Price:</strong> @item.Price.ToString("C", new CultureInfo("en-ZA"))
                        </p>
                        <a asp-action="Create" class="btn btn-sm btn-primary w-100">Add Another</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model != null && Model.Any())
{
    <h3 class="mt-4">⚠️ Low Stock Items</h3>
    <div class="row">
        @foreach (var item in Model.Where(i => i.Quantity <= 10))
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-danger">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name ?? "N/A"</h5>
                        <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p>
                        <p class="card-text text-danger"><strong>⚠️ Low Stock</strong></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
